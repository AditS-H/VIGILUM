{
  "name": "@vigilum/sdk",
  "version": "0.1.0",
  "description": "VIGILUM SDK - Smart Contract Security Analysis",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vigilum",
    "security",
    "smart-contracts",
    "ethereum",
    "blockchain",
    "vulnerability",
    "audit"
  ],
  "author": "VIGILUM Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "viem": "^2.20.0",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "viem": ">=2.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
